@model IEnumerable<BaiGiuXeTuDong_KhoaLuanTotNghiep.Models.DangKyThang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="font-weight: 500; color: #A6A9FF; text-align: center; font-size: 30px; margin-bottom:20px">DANH SÁCH ĐĂNG KÝ</h3>

@*<p>
    @Html.ActionLink("Create New", "Create")
