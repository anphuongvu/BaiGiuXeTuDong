@foreach (var item in Model)
{
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <svg class="bd-placeholder-img rounded-circle" width="140" height="140" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <style type="text/css">
                                rect {
                                    fill: url(#MyGradient)
                                }
                            </style>
                            <defs>
                                <linearGradient id="MyGradient" gradientTransform="rotate(90)">
                                    <stop offset="5%" stop-color="#A6A9FF" />
                                    <stop offset="95%" stop-color="#55ccff" />
                                </linearGradient>
                            </defs>
                            <title>Placeholder</title>
                            <rect rx="20" ry="20" width="100%" height="100%" fill="#55ccff" />
                            <text x="10%" y="50%" fill="#fff" dy=".3em">Avatar 140x140</text>
                        </svg>
                    </div>
                    <div class="col-md-6">
                        <p class="card-text">Họ tên khách hàng: @Html.DisplayFor(modelItem => item.HoTenKH)</p>
                        <p class="card-text">Email: @Html.DisplayFor(modelItem => item.Email)</p>
                        <p class="card-text">SĐT: @Html.DisplayFor(modelItem => item.SDT)</p>
                        <p class="card-text">@Html.ActionLink("Xem Thêm", "Details", new { id = item.MaDangKy }, new { style = "text-decoration:none; color: #55ccff;text-align:center;font-size: 14px;" })</p>
                    </div>
                    <div class="col-md-3">
                        <br />
                        <br />
                        <br />
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Duyệt đăng ký</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Xóa</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

