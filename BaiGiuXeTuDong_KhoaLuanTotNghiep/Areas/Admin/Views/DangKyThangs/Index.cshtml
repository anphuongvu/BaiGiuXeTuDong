        else
        {
            <a class="btn btn-sm btn-light border a33 text-danger" href="@Url.Action("Status", "DangKyThangs", new { id = item.MaDangKy })"> <i class="fas fa-toggle-off"></i> </a>
        }
        <a class="btn btn-sm btn-light border text-danger" href="@Url.Action("Delete", "DangKyThangs", new { id = item.MaDangKy })"> <i class="fas fa-trash-alt"></i></a>
