@model BaiGiuXeTuDong_KhoaLuanTotNghiep.Models.Xe

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    label {
        color: #55ccff
    }
</style>

<h3 style="font-weight: 500; color: #A6A9FF; text-align: center; font-size: 30px;">Chi tiết xe</h3>
<!-- Image -->
<div class="image" style="display: flex;">
    <div class="col-sm-6" style="text-align: center;">
        <img src="~/Areas/Admin/assets/img/Logo.png" style="height: 280px; width: 100%; border: groove 1px;" />
        <p style="padding-top: 5px;">Camera toàn cảnh</p>
    </div>
    <div class="col-sm-6" style="text-align: center; margin: 0 auto;">
        <div style="margin: 10px 0;">
            <img src="~/Areas/Admin/assets/img/Logo.png" style="height: 125px; width: 100%; border: groove 1px;" />
            <p style="padding-top: 5px;">Camera biển số xe</p>
        </div>
        <div>
            <img src="~/Areas/Admin/assets/img/Logo.png" style="height: 125px; width: 100%; border: groove 1px;" />
            <p style="padding-top: 5px;">Ảnh chụp biển số xe</p>
        </div>
    </div>
</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.BienSo)*@
            <label class="control-label col-md-2">Biển số xe</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BienSo)
        </dd>
        <dt>
            @*@Html.DisplayNameFor(model => model.HinhAnh)*@
            <label class="control-label col-md-2">Hình ảnh</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HinhAnh)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.LoaiXe.TenLoaiXe)*@
            <label class="control-label col-md-2">Mã Loại Xe</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiXe.TenLoaiXe)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.TheXeNgay.MaTheXeNgay)*@
            <label class="control-label col-md-2">Mã Thẻ Xe</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheXeNgay.MaTheXeNgay)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.BienSo }, new { style = "text-decoration:none; color: #55ccff;text-align:center;font-size: 14px;" }) |
    @Html.ActionLink("Quay lại", "Index", null, new { style = "text-decoration:none; color: #55ccff;text-align:center;font-size: 14px;" })
</p>
